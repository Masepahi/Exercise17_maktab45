<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
      integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
      crossorigin="anonymous"
    ></script>
    <title>Company</title>
  </head>
  <body>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th class="border">Name</th>
          <th class="border">Registration Number</th>
          <th class="border">City</th>
          <th class="border">State</th>
          <th class="border">Contact Number</th>
          <th class="border">Creation Date</th>
        </tr>
      </thead>
      <tbody>
        <% companies.forEach(row => { %>
        <tr
          id="<%= row._id %>"
          href="http://localhost:5005/company/<%= row._id %>"
        >
          <td class="border"><%= row.userName %></td>
          <td class="border"><%= row.registrationNumber %></td>
          <td class="border"><%= row.city %></td>
          <td class="border"><%= row.state %></td>
          <td class="border"><%= row.contactNumber %></td>
          <td class="border">
            <%= row.CreatedAt %>
            <button
              type="button"
              companyId="<%= row._id %>"
              class="deleteBtn btn btn-rounded-circle btn btn-danger"
            >
              Remove
            </button>
            <a
              href="http://localhost:5005/company/<%= row._id %>"
              class="btn btn-info btn-lg"
              >More Info</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <button
      type="button"
      class="btn btn-info btn-lg col-12"
      data-toggle="modal"
      data-target="#myModal"
    >
      Create
    </button>
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Create a new company</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>
          <div class="modal-body">
            <form action="/company" method="POST" id="myForm">
              <input type="text" name="userName" placeholder="User Name" />
              <input type="text" name="city" placeholder="City" />
              <input type="text" name="state" placeholder="State" />
              <input
                type="number"
                name="contactNumber"
                placeholder="Contact Number"
              />
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              id="createNewComp"
              class="btn btn-default"
              data-dismiss="modal"
            >
              Save
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/company.js"></script>
  </body>
</html>
